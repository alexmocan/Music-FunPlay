<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.funplay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AllSongsActivity"
            android:label="@string/category_all_songs" />

        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_albums" />

        <activity
            android:name=".ArtistsActivity"
            android:label="@string/category_artists" />

        <activity
            android:name=".GenresActivity"
            android:label="@string/category_genres" />

        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/category_playlists" />

        <activity
            android:name=".FavoritesActivity"
            android:label="@string/category_favorites" />

        <activity
            android:name=".RecentlyPlayedActivity"
            android:label="@string/category_recently_played" />

        <activity
            android:name=".MostPlayedActivity"
            android:label="@string/category_most_played" />

        <activity
            android:name=".FunPlayerActivity"
            android:label="@string/category_fun_player" />
    </application>

</manifest>